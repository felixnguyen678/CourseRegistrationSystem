<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="POJO.Account" table="account" schema="courseregistration">
        <id name="username">
            <column name="username" sql-type="varchar(10)" length="10"/>
        </id>
        <property name="password">
            <column name="password" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="accountName">
            <column name="account_name" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="phoneNumber">
            <column name="phone_number" sql-type="varchar(20)" length="20"/>
        </property>
    </class>
</hibernate-mapping>